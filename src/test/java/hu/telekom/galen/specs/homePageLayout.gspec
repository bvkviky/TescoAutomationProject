@objects
    logo            css     .brand-header__logo
    menubar         css     .menubar
        registration_item   id      utility-header-registration-link
        login_item          xpath   //*[@id="utility-header-registration-link"]
        language_item       id      utility-header-language-switch-link
        help_item           id      utility-header-help-link

    search_field    id      search-input



= Header =
    logo:
        width 120 px
        height ~30px

    menubar:
         contains partly registration_item
         contains partly login_item
         contains partly language_item
         contains partly help_item

